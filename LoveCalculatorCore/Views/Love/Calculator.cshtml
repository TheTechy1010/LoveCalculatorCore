@model LoveCalculatorCore.Models.LoveViewModel

@{
    ViewData["Title"] = "Calculator";
}
<br/><br/>
    <div class="calpage" id="wrap">
        <div class="p-3">
            <h1 class="text-dark font-weight-bold">
                Love Calculator
                <svg width="40" height="40" viewBox="0 0 100 100">

                    <path fill="#dc3545" d="M92.71,7.27L92.71,7.27c-9.71-9.69-25.46-9.69-35.18,0L50,14.79l-7.54-7.52C32.75-2.42,17-2.42,7.29,7.27v0 c-9.71,9.69-9.71,25.41,0,35.1L50,85l42.71-42.63C102.43,32.68,102.43,16.96,92.71,7.27z"></path>

                    <animateTransform attributeName="transform"
                                      type="scale"
                                      values="1; 1.5; 1.25; 1.5; 1.5; 1;"
                                      dur="1s"
                                      repeatCount="indefinite">
                    </animateTransform>

                </svg>
            </h1>
            <h3>Enter your details to calculate Love percentage</h3>
        </div>
        
        
        <hr />
        <div class="row text-center d-flex justify-content-center">
            <div class="col-md-10">

                <form asp-controller="Love" asp-action="Calculator" autocomplete="off" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <h4 class="font-weight-bold text-center">You</h4>
                        <input style="text-align:center;" asp-for="Lover1" class="form-control form-control-lg bg-transparent lg-text" />
                        <span asp-validation-for="Lover1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <h4 class="font-weight-bold text-center">Your Love</h4>
                        <input style="text-align:center;" asp-for="Lover2" class="form-control form-control-lg bg-transparent lg-text" />
                        <span asp-validation-for="Lover2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col text-center">
                                <button type="submit" class="btn btn-danger text-center btn-block">
                                    <h4 class="text-white">🤍</h4>
                                    <h5 class="text-center">Calculate</h5>
                                </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="col-md-6">

            </div>


            <canvas id="canvas"></canvas>
            
            <div class="title">Love Calculator Algorithm</div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
