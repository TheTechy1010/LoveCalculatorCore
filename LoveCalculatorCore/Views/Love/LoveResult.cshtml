@model LoveResult
<br/><br /><br />
           <div  class="container text-center text-white p-5 result">

               <h3>Love result calculated as</h3>
               <div class="row">
                   @{
                       string color = "orange";
                   }
                   @if (Model.LovePercentage > 0 && Model.LovePercentage < 30)
                   {
                       color = "red";
                   }
                   else if (Model.LovePercentage > 30 && Model.LovePercentage < 70)
                   {
                       color = "orange";
                   }
                   else
                   {
                       color = "green";
                   }
                   <div class="col-md-5">
                       <h1>
                           @Model.Lover1
                           <svg width="40" height="40" viewBox="0 0 100 100">

                               <path fill="#dc3545" d="M92.71,7.27L92.71,7.27c-9.71-9.69-25.46-9.69-35.18,0L50,14.79l-7.54-7.52C32.75-2.42,17-2.42,7.29,7.27v0 c-9.71,9.69-9.71,25.41,0,35.1L50,85l42.71-42.63C102.43,32.68,102.43,16.96,92.71,7.27z"></path>

                               <animateTransform attributeName="transform"
                                                 type="scale"
                                                 values="1; 1.5; 1.25; 1.5; 1.5; 1;"
                                                 dur="1s"
                                                 repeatCount="indefinite">
                               </animateTransform>

                           </svg>
                       </h1>

                   </div>
                   <div class="col-md-2">
                       <h1 class="text-center">LOVES</h1>
                   </div>
                   <div class="col-md-5">
                       <h1 class="font-weight-bold">
                           @Model.Lover2
                           <svg width="40" height="40" viewBox="0 0 100 100">

                               <path fill="#dc3545" d="M92.71,7.27L92.71,7.27c-9.71-9.69-25.46-9.69-35.18,0L50,14.79l-7.54-7.52C32.75-2.42,17-2.42,7.29,7.27v0 c-9.71,9.69-9.71,25.41,0,35.1L50,85l42.71-42.63C102.43,32.68,102.43,16.96,92.71,7.27z"></path>

                               <animateTransform attributeName="transform"
                                                 type="scale"
                                                 values="1; 1.5; 1.25; 1.5; 1.5; 1;"
                                                 dur="1s"
                                                 repeatCount="indefinite">
                               </animateTransform>

                           </svg>
                       </h1>
                   </div>
               </div>
               <div class="flex-wrapper justify-content-sm-center text-center">
                   <div class="single-chart">
                       <svg viewBox="0 0 36 36" class="circular-chart @color">
                           <path class="circle-bg"
                                 d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                           <path class="circle"
                                 stroke-dasharray="@Model.LovePercentage, 100"
                                 d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                           <text x="18" y="20.35" class="percentage font-weight-bold text-white">@Model.LovePercentage%</text>

                       </svg>
                   </div>

               </div>
               <div class="row">
                   <div class="col text-center">
                       <a href="/Love/Calculator"  class="btn btn-danger text-center">
                           <h4 class="text-white">🤍</h4>
                           <h5 class="text-center">Calculate Another</h5>
                       </a>
                   </div>
               </div>
           </div>
